<h1>Login</h1>
<%= form_for @user_session do |f| %>
  <%= render :partial => "shared/errors", :locals => {:model => @user_session} %>

  <div class="field">
    <%= f.text_field :email %> <br/>
    <%= f.label :email, "Email address" %>
  </div>
  <div class="field">
    <%= f.password_field :password %> <br/>
    <%= f.label :password, "Password" %>
  </div>

  <%= f.submit "Log in" %>
<% end %>
